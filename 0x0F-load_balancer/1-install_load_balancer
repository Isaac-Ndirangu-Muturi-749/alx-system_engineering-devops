#!/usr/bin/env bash
# Installs and sets up HAProxy

sudo apt-get update
sudo apt-get -y install haproxy

# Start HAProxy service
sudo service haproxy start

# Enable HAProxy by modifying the configuration file
sudo sed -i 's/ENABLED=0/ENABLED=1/' /etc/default/haproxy

# Create a backup of the original haproxy.cfg file
sudo mv /etc/haproxy/haproxy.cfg{,.original}

# Create a new haproxy.cfg file with the desired configuration
sudo tee /etc/haproxy/haproxy.cfg >/dev/null <<EOF
global
    log 127.0.0.1 local0 notice
    maxconn 2000
    user haproxy
    group haproxy

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    retries 3
    option redispatch
    timeout connect  5000
    timeout client  10000
    timeout server  10000

listen 339243-lb-01
    bind 0.0.0.0:80
    mode http
    stats enable
    stats uri /haproxy?stats
    balance roundrobin
    option httpclose
    option forwardfor
    server 339243-web-01 35.153.193.23:80 check
    server 339243-web-02 54.146.94.67:80 check
EOF

# Restart HAProxy service to apply changes
sudo service haproxy restart

echo "HAProxy setup completed successfully."
