#!/usr/bin/env bash
# Installs and sets up HAProxy

# Purge existing HAProxy installation and related directories
sudo apt-get purge -y haproxy
sudo rm -rf /etc/haproxy
sudo rm -rf /var/lib/haproxy
sudo apt -y autoremove

# Update package list and install HAproxy
sudo apt-get update
sudo apt-get install -y haproxy

# Create a backup of the original haproxy.cfg file
sudo mv /etc/haproxy/haproxy.cfg{,.original}

# Configure HAproxy
sudo tee /etc/haproxy/haproxy.cfg > /dev/null <<EOF
global
    log 127.0.0.1 local0 notice
    maxconn 2000
    user haproxy
    group haproxy

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    retries 3
    option redispatch
    timeout connect  5000
    timeout client  10000
    timeout server  10000

frontend http_frontend
    bind *:80
    mode http
    default_backend http_backend

backend http_backend
    balance roundrobin
    server 339243-web-01 35.153.193.23:80 check
    server 339243-web-02 54.146.94.67:80 check

EOF

# Restart or start HAProxy service if it's not already running
if ! pgrep haproxy > /dev/null; then
    sudo service haproxy start
else
    sudo service haproxy restart
fi

# Ensure HAProxy is started on boot
# Make sure that HAproxy can be managed via an init script
echo "ENABLED=1" | sudo tee -a /etc/default/haproxy
